{
  "name": "Jornada Rust em Bioinformática",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true
      },
      "extensions": [
        "rust-lang.rust-analyzer",
        "serayuzgur.crates",
        "tamasfe.even-better-toml",
        "github.vscode-pull-request-github",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [
    8080
  ],
  // Garante que o Codespace faça login com o usuário que criamos no Dockerfile.
  "remoteUser": "vscode"
}
